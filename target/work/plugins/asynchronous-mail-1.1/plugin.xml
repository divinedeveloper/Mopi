<plugin name='asynchronous-mail' version='1.1' grailsVersion='2.3.1 &gt; *'>
  <author>Vitalii Samolovskikh aka Kefir</author>
  <authorEmail>kefirfromperm@gmail.com</authorEmail>
  <title>Asynchronous Mail Plugin</title>
  <description>(The plugin realises asynchronous mail sending.  + It stores messages in the DB and sends them asynchronously by the quartz job.)</description>
  <documentation>http://www.grails.org/plugin/asynchronous-mail</documentation>
  <type>AsynchronousMailGrailsPlugin</type>
  <resources>
    <resource>DefaultAsynchronousMailConfig</resource>
    <resource>grails.plugin.asyncmail.AsynchronousMailAttachment</resource>
    <resource>grails.plugin.asyncmail.AsynchronousMailMessage</resource>
    <resource>grails.plugin.asyncmail.AsynchronousMailJob</resource>
    <resource>grails.plugin.asyncmail.ExpiredMessagesCollectorJob</resource>
    <resource>grails.plugin.asyncmail.AsynchronousMailPersistenceService</resource>
    <resource>grails.plugin.asyncmail.AsynchronousMailProcessService</resource>
    <resource>grails.plugin.asyncmail.AsynchronousMailSendService</resource>
    <resource>grails.plugin.asyncmail.AsynchronousMailService</resource>
  </resources>
</plugin>