<div ng-controller="SliderCtrl">
	<div class="row">
	<div class="col-md-10 center-block" style="float:none">
		<div class="col-md-3">
	
			<div class="form-group" style="text-align: center">
				<label ng-show="edit==false" for="exampleInputEmail2">Choice
					for 1(least)</label> <input ng-show="edit==true" type="text"
					class="form-control" id="exampleInputEmail2"
					placeholder="Choice for 1(least)" ng-model="userinput.one">
			</div>
		</div>
		<div class="col-md-6">
			<img style="width: 100%" src="images/slider.png" />
		</div>
		<div class="col-md-3">
			<div class="form-group" style="text-align: center">
				<label ng-show="edit==false" for="exampleInputEmail2">Choice
					for 2(max)</label> <input ng-show="edit==true" type="text"
					class="form-control" id="exampleInputEmail2"
					placeholder="Choice for 2(max)" ng-model="userinput.two">
			</div>
		</div>
		</div>
	</div>
		<div class="row text-center">
		<div class="form-group">
	<button class="btn btn-w-md btn-gap-v btn-success"
		ng-click="saveQuestion()" type="button">Save</button>
		</div>
		</div>
</div>