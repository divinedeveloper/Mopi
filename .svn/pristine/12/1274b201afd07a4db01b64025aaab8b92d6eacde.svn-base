	def index() { }
	def uploadImage()
	{
		JSONObject dashboardJsonlist = new JSONObject();
		def imageUrl=null
		try{
			
			if(request)
			{
				def uploadedFile = request.getFile("myfile")
				if(!uploadedFile.empty)
				{
					try
					{
